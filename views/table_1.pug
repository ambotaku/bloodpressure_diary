extends layout_1.pug

block table_1
  table.minimalistBlack
    thead
      tr
        th Datum
        th Uhrzeit
        th Systolisch
        th Diastolisch
        th Puls
        th Anmerkung
    tbody
        each day in days
          tr
            td #{day.Date}
            td #{day.Time}
            td 
              span.bold #{day.Sys}
            td 
              span.bold #{day.Dia}
            td 
              span.bold #{day.Puls}
            td #{day.Remark}
    tfoot
      tr
        td Minimum 
        td #{minSys} 
        td #{minDia} 
        td #{minPuls} 
      tr 
        td Maximum 
        td #{maxSys} 
        td #{maxDia} 
        td #{maxPuls} 
      tr 
        td Mittelwert
        td #{avgSys} 
        td #{avgDia} 
        td #{avgPuls}   
